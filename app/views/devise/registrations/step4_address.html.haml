.account-page
  %header.header
    %h1.header__logo
      =link_to root_path do
        = image_tag '/images/logo-main.png', height:"52px", width:"190px;", alt: "mercari"
    %nav.header__progress-bar
      = image_tag '/images/progress-bar.png',height:"50px",width:"500px;"
  %main.registration
    %section.registration__container
      %h2.registration__title 発送元・お届け先住所入力
      %div.inner-registration
        .inner-registration__content
          .inner-registration__contents--title.side
            お名前
          .inner-registration__contents--require.side
            必須
          .inner-registration__contents--input-name
            %input{type:"text", placeholder:"例）メルカリ",name:"content", class: "input-firstname"}
            </br>
          .inner-registration__contents--input-name
            %input{type:"text", placeholder:"例）太郎",name:"content"}
          .inner-registration__contents--title.side
            お名前カナ
          .inner-registration__contents--require.side
            必須
          .inner-registration__contents--input-name
            %input{type:"text", placeholder:"例）メルカリ",name:"content", class: "input-firstname"}
            </br>
          .inner-registration__contents--input--name
            %input{type:"text", placeholder:"例）タロウ",name:"content"}
          .inner-registration__contents--title.side
            郵便番号
          .inner-registration__contents--require.side
            必須
          .inner-registration__contents--input
            %input{type:"text", placeholder:"例）123-4567",name:"content"}
          .inner-registration__contents--title.side
            都道府県
          .inner-registration__contents--require.side
            必須
          .inner-registration__contents--select
            %form{action: "#", method: "GET"}
            %select{name: "content", class: "select"}
              %option{value: ""} ---
              %option{value: "北海道"} 北海道
          .inner-registration__contents--title.side
            市区町村
          .inner-registration__contents--require.side
            必須
          .inner-registration__contents--input
            %input{type:"text", placeholder:"例）横浜市緑区",name:"content"}
          .inner-registration__contents--title.side
            番地
          .inner-registration__contents--require.side
            必須
          .inner-registration__contents--input
            %input{type:"text", placeholder:"例）青山1-1-1",name:"content"}
          .inner-registration__contents--title.side
            建物名
          .inner-registration__contents--require-grey.side
            任意
          .inner-registration__contents--input
            %input{type:"text", placeholder:"例）柳ビル103",name:"content"}
          .inner-registration__contents--title.side
            電話
          .inner-registration__contents--require-grey.side
            任意
          .inner-registration__contents--input
            %input{type:"text", placeholder:"例）09012345678",name:"content"}
          .inner-registration__contents--next-btn
            =link_to "次へ進む", step5_payment_path, method: :get, class: 'btn-next'
  = render 'devise/registrations/footer'